{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "args": ["--experimental-modules", "--no-timeouts", "--colors"],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**/*.js", "${workspaceFolder}/node_modules/mocha/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch snakebot",
      "program": "${workspaceFolder}/snake-cli.js",
      "args": ["${workspaceFolder}/src/snakes/slither.js"],
      "runtimeArgs": ["--experimental-modules"],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
